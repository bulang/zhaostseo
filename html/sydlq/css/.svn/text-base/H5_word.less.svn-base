//reset
* {
  padding: 0;
  margin: 0;
}
li {
  list-style: none;
}
a {
  text-decoration: none;
  -webkit-tap-highlight-color: none;
}
a:hover {
  text-decoration: underline;
}
input {
  -webkit-apperance: none;
}
img{border:none;}
//公用
@rem:75rem;
//字体
.f32{font-size:32/@rem;}
.lh150{line-height: 150%;}
.lh200{line-height: 200%;}
.tr{text-align: right;}
.tl{text-align: left;}
.tc{text-align: center;}
//定位
.bc{margin:0 auto;}
.fl{float:left;}
.fr{float:right;}
.clearfix:after {
  content: "";
  display: block;
  clear: both;
  line-height: 0;
  visibility: hidden;
}
.overflow{overflow:hidden;}
//间距
.ml20{margin-left:20/@rem;}
.mt20{margin-top:20/@rem;}
.ml30{margin-left:30/@rem;}
.mt30{margin-top:30/@rem;}
.mt40{margin-top:40/@rem;}
.pt30{padding-top:30/@rem;}
.pb30{padding-bottom:30/@rem;}
//盒子
.block{display: block;}
.inline-block{display: inline-block;}
//框架
html {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
body {
  width: 100%;
  height: 100%;
  overflow: auto;
  font-family: "微软雅黑";
  background-color: #111;
}
.container{
    width:100%;
    height: 100%;
    box-sizing: border-box;
    padding:30/@rem;
    font-size:30/@rem;
    line-height: 150%;
    color:#f2f2f2;
//  font-weight: bold;
}

//宽高
.w540{width:540/@rem;}
.w300{width:300/@rem;}
